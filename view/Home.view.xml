<mvc:View
	controllerName="Hyogazin.UI5ImproveControlCreation.controller.Home"
	xmlns="Hyogazin.UI5ImproveControlCreation.custom"
	xmlns:m="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Div alignItems="Center" justifyContent="Center" padding="10px">
		<Panel>
			<header>
				<Text text="Titulo"/>
			</header>
			<Div alignItems="Center" justifyContent="space-between">
				<Text text="Nome:"/>
				<Input width="100%" value="{data>/text}"/>
			</Div>
			<Div alignItems="Center" justifyContent="space-between">
				<Text text="Email:"/>
				<Input width="100%" value="{data>/text}"/>
			</Div>
			<Div alignItems="Center" justifyContent="space-between">
				<Text text="Data de Nascimento:"/>
				<Input width="100%" value="{data>/text}"/>
			</Div>
			<footer>
				<Button text="Cancelar"/>
				<Button text="Confirmar"/>
			</footer>
		</Panel>
	</Div>
</mvc:View>